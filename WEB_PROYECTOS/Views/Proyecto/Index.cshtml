@model IEnumerable<ENTIDAD.Proyecto>

@{
    ViewBag.Title = "Index";
}

<h2>Lista de Proyectos</h2>

<p>
    <a class="btn btn-primary" href="@Url.Action("Crear", "Proyecto")"><i class="glyphicon glyphicon-plus"></i> Crear proyecto</a>
</p>
<table class="table">
    <tr>
        <th>
            Nombre del Proyecto
        </th>
        <th>
            Fecha de Inicio
        </th>
        <th>
            Fecha Fin
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.NombreProyecto
            </td>
            <td>
                @item.FechaInicio.ToShortDateString()
            </td>
            <td>
                @item.FechaFin.ToShortDateString()
            </td>
            <td>
                <a href="@Url.Action("Editar", "Proyecto", new { id = item.ProyectoId })" class="btn btn-primary btn-xs" title="Editar"><i class="glyphicon glyphicon-edit"></i></a> 
                <a href="@Url.Action("DetalleProy", "Proyecto", new { id = item.ProyectoId })" class="btn btn-info btn-xs" title="Detalle"><i class="glyphicon glyphicon-pencil"></i></a> 
                <a href="@Url.Action("Eliminar", "Proyecto", new { id = item.ProyectoId })" class="btn btn-danger btn-xs" title="Eliminar"><i class="glyphicon glyphicon-trash"></i></a> 

                
            </td>
        </tr>
    }

</table>
